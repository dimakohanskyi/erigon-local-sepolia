{
  "dashboard": {
    "title": "Erigon Node Monitoring",
    "tags": ["erigon", "ethereum"],
    "timezone": "browser",
    "refresh": "10s",
    "time": {
      "from": "now-15m",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Node Status",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "up{job=\"erigon\"}",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background"
        },
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {"type": "value", "value": "1", "text": "Online"},
              {"type": "value", "value": "0", "text": "Offline"}
            ],
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 2,
        "title": "Connected Peers",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 0},
        "targets": [
          {
            "expr": "p2p_peers{job=\"erigon\"}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Sync Stage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "sync_stage{job=\"erigon\"}",
            "refId": "A",
            "legendFormat": "{{stage}}"
          }
        ],
        "options": {
          "graphMode": "none"
        }
      },
      {
        "id": 4,
        "title": "Memory Usage",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "process_resident_memory_bytes{job=\"erigon\"} / 1024 / 1024 / 1024",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "decgbytes",
            "decimals": 2
          }
        }
      },
      {
        "id": 5,
        "title": "Block Height",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4},
        "targets": [
          {
            "expr": "chain_head_block{job=\"erigon\"}",
            "refId": "A",
            "legendFormat": "Current Block"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Block Number"},
          {"format": "short"}
        ]
      },
      {
        "id": 6,
        "title": "Download Speed",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4},
        "targets": [
          {
            "expr": "rate(downloader_downloaded_bytes{job=\"erigon\"}[1m])",
            "refId": "A",
            "legendFormat": "Download Rate"
          }
        ],
        "yaxes": [
          {"format": "Bps", "label": "Bytes/sec"},
          {"format": "short"}
        ]
      },
      {
        "id": 7,
        "title": "P2P Peers Over Time",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12},
        "targets": [
          {
            "expr": "p2p_peers{job=\"erigon\"}",
            "refId": "A",
            "legendFormat": "Peers"
          }
        ],
        "yaxes": [
          {"format": "short", "label": "Peer Count"},
          {"format": "short"}
        ]
      },
      {
        "id": 8,
        "title": "CPU Usage",
        "type": "graph",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12},
        "targets": [
          {
            "expr": "rate(process_cpu_seconds_total{job=\"erigon\"}[1m]) * 100",
            "refId": "A",
            "legendFormat": "CPU %"
          }
        ],
        "yaxes": [
          {"format": "percent", "label": "CPU Usage"},
          {"format": "short"}
        ]
      }
    ]
  },
  "overwrite": true
}
